#!/usr/bin/env bash
set -eo pipefail
if [[ -e "${HOME}/.zshrc" ]]; then
  echo "${HOME}/.zshrc already exists"
else
  ln -s "${HOME}/.dotfiles/zsh/.zshrc" "${HOME}/.zshrc"
fi
if [[ -e "${HOME}/.vimrc" ]]; then
  echo "${HOME}/.vimrc already exists"
else
  ln -s "${HOME}/.dotfiles/vim/.vimrc" "${HOME}/.vimrc"
fi
if [[ -e "${HOME}/.vim" ]]; then
  echo "${HOME}/.vim already exists"  
else
  ln -s "${HOME}/.dotfiles/vim/.vim" "${HOME}/.vim"
fi
if [[ -e "${HOME}/.zsh_local" ]]; then
  echo "${HOME}/.zsh_local already exists"
else
  touch "${HOME}/.zsh_local"
fi
if [[ -e "${HOME}/.local_functions" ]]; then
  echo "${HOME}/.local_functions already exists"
else
  touch "${HOME}/.local_functions"
fi
if [[ -e "${HOME}/.zsh_plugins_local" ]]; then
  echo "${HOME}/.zsh_plugins_local already exists"
else
  touch "${HOME}/.zsh_plugins_local"
fi

